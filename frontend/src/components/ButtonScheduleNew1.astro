<button
  type="button"
  class="buttons__expanding"
  id="calendly_widget"
  data-auto-load="false"
  onclick={calendlySlug}
>
  <span>Schedule {schedule}</span>
</button>

<!-- ASTRO COMPONENT IMPORTS SCRIPTS: BUTTONSCHEDULE.ASTRO -->
<script
  hoist
  src="https://assets.calendly.com/assets/external/widget.js"
  type="text/javascript"
></script>
<script hoist type="text/javascript">
  Calendly.initInlineWidget({
    url: "https://calendly.com/ccbiz/discoverysession.html",
    parentElement: document.getElementById("calendly_widget"),
    prefill: {},
    utm: {},
  });
</script>
